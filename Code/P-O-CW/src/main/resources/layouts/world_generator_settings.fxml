<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" fx:controller="be.kuleuven.cs.robijn.gui.WorldGeneratorSettingsController" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="200.0">
                    <children>
                        <Label text="Number of boxes:">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="numberOfBoxesTextfield">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="200.0">
                    <HBox.margin>
                        <Insets top="5.0" />
                    </HBox.margin>
                    <children>
                        <Label text="Randomize colors:">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Label>
                        <CheckBox fx:id="randomizeColorsCheckBox">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </CheckBox>
                    </children>
                </HBox>
            </children>
        </VBox>
        <Button fx:id="okButton" minWidth="60.0" mnemonicParsing="false" text="OK" AnchorPane.bottomAnchor="14.0" AnchorPane.rightAnchor="14.0" />
        <Button fx:id="cancelButton" minWidth="60.0" mnemonicParsing="false" text="Cancel" AnchorPane.bottomAnchor="14.0" AnchorPane.rightAnchor="85.0" />
    </children>
</AnchorPane>
